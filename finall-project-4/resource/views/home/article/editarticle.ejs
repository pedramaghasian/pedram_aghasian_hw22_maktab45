<div class="container emp-profile">  
  <h1> ویرایش مقاله </h1>
  <hr> 


  <!-- ckeditro -->

  <form action="/article/edit" method="POST" enctype="multipart/form-data">
    <div class="form-group row mb-4">
      <label for="title" class="col-sm-2 col-form-label h5">عنوان مقاله</label>
      <div class="col-sm-10">
        <input type="text"  class="form-control-plaintext border border-1 " id="title" name="title" value="<%= article.title %> ">
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="description1" class="col-sm-2 col-form-label h5"> توضیحات</label>
      <div class="col-sm-10">
        <input type="text"  class="form-control-plaintext border border-1 " id="description1" name="description1" value="<%= article.description1 %> ">
      </div>
    </div>

    <div class="form-group row mb-4">
      <label for="image" class="col-sm-2 col-form-label h5">عکس مقاله</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" id="image" name="article-image">
      </div>
    </div>

    <div class="form-group row d-flex flex-row">
      <label for="editor" class="col-sm-2 col-form-label h5 align-self-center"></label>
      <div class="col-sm-10">
        <textarea rows="20" name="editor" id="editor" ><%- article.description2  %> </textarea>
        <!-- <input name="tinymce" type="file" id="upload" class="hidden" onchange="" style="display: none;"> -->
      </div>
    </div>
    <div class="form-group row mt-4">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <input type="hidden" name="articleId" value="<%= article._id %>">

        <button type="submit" class="btn btn-success" >ثبت مقاله</button>
      </div>
    </div>
  </form>




  <!-- end ckeditro -->

</div>




