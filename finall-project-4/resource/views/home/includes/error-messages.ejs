
<% if(messages){ %> <% if(messages['errors']){ %>

  <!-- errors -->
  <div class="alert alert-danger alert-dismissible fade show mt-1" role="alert">
    <button
      type="button"
      class="btn-close p-1"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    <%messages['errors'].forEach(err=>{ %> <%= err %> <br />
    <% }) %>
  </div>
  <!-- end errors -->
  <% }else if(messages['success']){ %>
  <!-- errors -->
  <div class="alert alert-success alert-dismissible fade show mt-1" role="alert">
    <button
      type="button"
      class="btn-close p-1"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    <%messages['success'].forEach(suc=>{ %> <%= suc %> <br />
    <% }) %>
  </div>
  <!-- end errors -->
  <% } %> <% } %>
  
  